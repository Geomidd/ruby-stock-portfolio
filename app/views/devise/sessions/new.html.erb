<div class="col-md-6 offset-md-3 bg-light p-5 rounded-3">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <div class="field">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>
      <div class="actions mx-auto text-center w-25 mt-3">
        <%= f.submit "Log in", class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
  <div class="mt-4 mx-auto text-muted text-center w-50">
    <%= render "devise/shared/links" %>
  </div>
</div>
